<li data-product-id="<%= product.product_id %>" class="inline-flex w-64 flex-col text-center lg:w-auto">
  <div class="group relative">
    <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200">
      <% if product.image_url.presence %>
        <%= image_tag product.image_url, class: "h-full w-full object-cover object-center group-hover:opacity-75" %>
      <% else %>
        <img src="https://placehold.co/300x300" class="h-full w-full object-cover object-center group-hover:opacity-75">
      <% end %>
    </div>
    <div class="mt-6">
      <% if false %>
        <p class="text-sm text-gray-500">Black</p>
      <% end %>
      <h3 class="mt-1 font-semibold text-gray-900">
        <a href="#">
          <span class="absolute inset-0"></span>
          <%= product.product_name %>
        </a>
      </h3>
      <p class="mt-1 text-gray-900">
        <%= number_to_currency(product.base_price / 100.0) %>
        <% if product.sale_price %>
          <span class="text-red-500">
            SALE
            <%= number_to_currency(product.sale_price / 100.0) %>
          </span>
        <% end %>
      </p>
    </div>
    <p><%= product.reviews_count %> total reviews by <%= product.customer_reviews_count %> customers</p>
    <p><%= number_with_precision product.average_review_for_latest, precision: 1 %> avg rating for customers' recent review</p>
    <p><%= number_with_precision product.reviews_average, precision: 1 %> avg rating for all reviews</p>
  </div>
</li>
